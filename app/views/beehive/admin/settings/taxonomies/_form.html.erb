<% action = @taxonomy.persisted? ? admin_settings_taxonomy_path(@taxonomy) : admin_settings_taxonomies_path %>

<%= form_for @taxonomy, url: action, as: :taxonomy do |f| %>
  <%= render 'beehive/shared/form_errors', resource: f.object %>

  <div class="form-section row">
    <div class="col-4">
      <h2 class="form-section-title">Basic details</h2>
    </div>

    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control', rows: 4 %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr class="form-section-separator">

  <%= f.submit 'Save' %>
<% end %>
